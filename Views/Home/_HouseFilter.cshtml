<div class="row space1" ng-show="realtyType == 'house'">
    <div class="col-lg-12">
        <label>Вид объекта</label>
        <select style="width: 100%; height: 30px;" ng-model="objectType">
            <option value="">Неважно</option>
            <option value="house">Дом</option>
            <option value="countryHouse">Дача</option>
            <option value="cottage">Коттедж</option>
            <option value="townhouse">Таунхаус</option>
        </select>
    </div>
</div>

<div class="row space1" ng-show="realtyType == 'house'">
    <div class="col-lg-12">
        <label>Площадь дома от</label>
        <select style="width: 100%; height: 30px;" ng-model="minSquare">
            <option value="">Неважно</option>
            <option value="_75">75</option>
            <option value="_100">100</option>
            <option value="_150">150</option>
            <option value="_200">200</option>
            <option value="_250">250</option>
            <option value="_300">300</option>
            <option value="_400">400</option>
            <option value="_500">500</option>
        </select>
    </div>
</div>

<div class="row space1" ng-show="realtyType == 'house'">
    <div class="col-lg-12">
        <label>Площадь дома до</label>
        <select style="width: 100%; height: 30px;" ng-model="maxSquare">
            <option value="">Неважно</option>
            <option value="_75">75</option>
            <option value="_100">100</option>
            <option value="_150">150</option>
            <option value="_200">200</option>
            <option value="_250">250</option>
            <option value="_300">300</option>
            <option value="_400">400</option>
            <option value="_500">500</option>
            <option value="moreThat500">более 500</option>
        </select>
    </div>
</div>

<div class="row space1" ng-show="realtyType == 'house'">
    <div class="col-lg-12">
        <label>Расположение</label>
        <select style="width: 100%; height: 30px;" ng-model="location">
            <option value="">Неважно</option>
            <option value="city">В черте города</option>
            <option value="countryside">За городом</option>
        </select>
    </div>
</div>
