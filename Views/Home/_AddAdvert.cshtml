<div class="modal fade" id="NewAdvertModal" ng-controller="NewAdvertController">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form>
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" ng-click="closeDialog()">
                        <span aria-hidden="true">&times;</span>
                        <span class="sr-only">Close</span>
                    </button>
                    <h4 class="modal-title">Новое объявление</h4>
                </div>
                @Html.Partial("AddAdvert/_Step1")
                @Html.Partial("AddAdvert/_Step2")
                @Html.Partial("AddAdvert/_Step3")

                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="closeDialog()">
                        <span class="glyphicon glyphicon-ban-circle"></span>
                        Отмена
                    </button>
                    
                    <button type="button" class="btn btn-default" ng-hide="isFirstStep()" ng-click="back()">
                        <span class="glyphicon glyphicon-arrow-left"></span>
                        Назад
                    </button>

                    <button type="button" class="btn btn-success" ng-hide="isLastStep()" ng-click="next()">
                        <span class="glyphicon glyphicon-arrow-right"></span>
                        Далее
                    </button>

                    <button type="button" class="btn btn-success" ng-show="isLastStep()" ng-click="publish()">
                        <span class="glyphicon glyphicon-ok-circle"></span>
                        OK
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>