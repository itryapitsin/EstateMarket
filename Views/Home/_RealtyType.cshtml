<div class="row space1">
    <div class="col-lg-12" ng-class="{ 'has-error': errors['shouldSelectRealtyType'] }">
        <label class="control-label">Тип недвижимости</label>
        <select style="width: 100%; height: 30px;" ng-model="realtyType" class="form-control">
            <option value="">{{emptyRealtyType}}</option>
            <option value="room">Комнаты</option>
            <option value="apartment">Квартиры</option>
            <option value="house">Дома, дачи, коттеджи</option>
            <option value="land">Земельные участки</option>
            <option value="garage">Гаражи и машиноместа</option>
            <option value="commercial">Коммерческая недвижимость</option>
        </select>
    </div>
</div>
