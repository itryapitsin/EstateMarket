<div class="row space1">
    <div class="col-lg-12" ng-class="{ 'has-error': errors['shouldSelectRealtyType'] }">
        <label class="control-label">Тип недвижимости</label>
        <select style="width: 100%; height: 30px;" ng-model="realtyType" class="form-control">
            <option value="">{{emptyRealtyType}}</option>
            <option value="rooms">Комнаты</option>
            <option value="apartments">Квартиры</option>
            <option value="houses">Дома, дачи, коттеджи</option>
            <option value="lands">Земельные участки</option>
            <option value="garages">Гаражи и машиноместа</option>
            <option value="commercials">Коммерческая недвижимость</option>
        </select>
    </div>
</div>
